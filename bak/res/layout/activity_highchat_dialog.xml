<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_high_chat_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#0000"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/pic_bg_highpopup"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="170dp"
            android:text="很遗憾的告诉你，"
            android:textColor="#A6A6A6"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你已选择了另一边，"
            android:textColor="#A6A6A6"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="明晚记得先来我这儿哦"
            android:textColor="#A6A6A6"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_button_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:text="确定"
            android:textColor="#2A0D1F"
            android:textSize="14sp"
            android:background="@drawable/bottom_bg_highborder"/>
    </LinearLayout>

</LinearLayout>