<com.tjut.mianliao.black.MagicLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    app:color_magic="0">

    <com.tjut.mianliao.theme.ThemeLineView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#E6E6E6"/>

    <com.tjut.mianliao.black.MagicRelativeLayout
        android:id="@+id/rl_point_me"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:onClick="onClick"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <com.tjut.mianliao.theme.ThemeTextView
            android:id="@+id/tv_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_kernel"
            android:drawablePadding="10dp"
            android:text="我的麦粒"
            android:textColor="#515151"
            android:textSize="15sp"/>
        
        <com.tjut.mianliao.theme.ThemeTextView
            android:id="@+id/tv_point_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_toRightOf="@id/tv_point"
			android:layout_centerVertical="true"
            android:textColor="#656565"
            android:textSize="14sp"/>

        <com.tjut.mianliao.theme.ThemeImageView
            android:id="@+id/iv_right_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/botton_bg_chat_arrowright"/>
    </com.tjut.mianliao.black.MagicRelativeLayout>

    <com.tjut.mianliao.theme.ThemeLineView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/card_margin_horizontal"
        android:layout_marginRight="@dimen/card_margin_horizontal"
        android:background="#E6E6E6"/>

    <com.tjut.mianliao.black.MagicRelativeLayout
        android:id="@+id/rl_gold_me"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:onClick="onClick"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <com.tjut.mianliao.theme.ThemeTextView
            android:id="@+id/tv_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
			android:layout_centerVertical="true"
            android:drawableLeft="@drawable/icon_money"
            android:drawablePadding="10dp"
            android:text="我的金币"
            android:textColor="#515151"
            android:textSize="15sp"/>

        <com.tjut.mianliao.theme.ThemeTextView
            android:id="@+id/tv_gold_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
			android:layout_toRightOf="@id/tv_gold"
			android:layout_centerVertical="true"
            android:textColor="#656565"
            android:textSize="14sp"/>
        
        <com.tjut.mianliao.theme.ThemeImageView
            android:id="@+id/iv_right_gold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:src="@drawable/botton_bg_chat_arrowright"/>
    </com.tjut.mianliao.black.MagicRelativeLayout>

    <com.tjut.mianliao.theme.ThemeLineView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/card_margin_horizontal"
        android:layout_marginRight="@dimen/card_margin_horizontal"
        android:background="#E6E6E6"/>

</com.tjut.mianliao.black.MagicLinearLayout>