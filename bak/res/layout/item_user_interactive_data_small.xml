<com.tjut.mianliao.black.MagicLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="#B3000000"
    android:gravity="center"
    android:orientation="horizontal">

    <com.tjut.mianliao.black.MagicLinearLayout
        android:id="@+id/ll_post_count_info"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick">

        <com.tjut.mianliao.theme.ThemeTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/channel_information"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/cf_post"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <com.tjut.mianliao.theme.ThemeTextView
            android:id="@+id/tv_post_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </com.tjut.mianliao.black.MagicLinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#4CFFFFFF"/>

    <com.tjut.mianliao.black.MagicLinearLayout
        android:id="@+id/ll_won_up_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center">

        <com.tjut.mianliao.theme.ThemeTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/buttom_like"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/prof_got_up"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <com.tjut.mianliao.theme.ThemeTextView
            android:id="@+id/tv_won_up_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </com.tjut.mianliao.black.MagicLinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="#4CFFFFFF"/>

    <com.tjut.mianliao.black.MagicLinearLayout
        android:id="@+id/ll_visitor_count"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center">

        <com.tjut.mianliao.theme.ThemeTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/channel_see"
            android:drawablePadding="4dp"
            android:gravity="center_vertical"
            android:text="@string/prof_visitor"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <com.tjut.mianliao.theme.ThemeTextView
            android:id="@+id/tv_visitor_count"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textSize="12sp"/>
    </com.tjut.mianliao.black.MagicLinearLayout>

</com.tjut.mianliao.black.MagicLinearLayout>