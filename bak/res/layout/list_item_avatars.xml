<com.tjut.mianliao.black.MagicFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <com.tjut.mianliao.component.AvatarView
        android:id="@+id/iv_emotion_icon"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginBottom="11dp"
        android:src="@drawable/ic_avatar_forum"
        app:borderType="roundCorner"
        app:cornerRadius="5dp"
        android:padding="1px"
        android:background="@drawable/bg_bt_emotion_circle"/>

    <com.tjut.mianliao.theme.ThemeTextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:background="@drawable/btn_orange_rectangle"
        android:drawablePadding="5dp"
        android:padding="3dp"
        android:textColor="@color/white"
        android:textSize="9sp"/>

    <com.tjut.mianliao.theme.ThemeImageView
        android:id="@+id/iv_buy_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:src="@drawable/ic_vip"
        android:visibility="gone"/>

</com.tjut.mianliao.black.MagicFrameLayout>