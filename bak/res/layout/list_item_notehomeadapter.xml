<com.tjut.mianliao.black.MagicLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<TextView
	    android:id="@+id/tv_padding"
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:visibility="gone"/>
    <com.tjut.mianliao.black.MagicLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <com.tjut.mianliao.black.MagicLinearLayout
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.tjut.mianliao.theme.ThemeTextView
                android:id="@+id/tv_date_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8B8B8B"
                android:textSize="9sp" />

            <com.tjut.mianliao.theme.ThemeTextView
                android:id="@+id/tv_notes_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/take_notes_lable_time"
                android:textColor="#8B8B8B"
                android:textSize="10sp"
                android:visibility="gone" />

            <com.tjut.mianliao.theme.ThemeTextView
                android:id="@+id/tv_notes_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#8B8B8B"
                android:textSize="9sp" />
        </com.tjut.mianliao.black.MagicLinearLayout>

        <com.tjut.mianliao.black.MagicLinearLayout
            android:layout_width="19dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <com.tjut.mianliao.theme.ThemeImageView
                android:id="@+id/iv_circle1"
                android:layout_width="19dp"
                android:layout_height="19dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/pic_note_cir_purple" />

            <com.tjut.mianliao.theme.ThemeImageView
                android:id="@+id/iv_line1"
                android:layout_width="4dp"
                android:layout_height="180dp"
                android:layout_marginTop="1dp"
                android:background="#7968be" />

            <com.tjut.mianliao.theme.ThemeImageView
                android:id="@+id/iv_circle2"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/bg_circle_orange" />

            <com.tjut.mianliao.theme.ThemeImageView
                android:id="@+id/iv_line2"
                android:layout_width="4dp"
                android:layout_height="167dp"
                android:layout_marginTop="1dp"
                android:background="#f2bb90" />

            <com.tjut.mianliao.theme.ThemeImageView
                android:id="@+id/iv_circle3"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_marginTop="1dp"
                android:src="@drawable/bg_circle_pink" />

            <com.tjut.mianliao.theme.ThemeImageView
                android:id="@+id/iv_line3"
                android:layout_width="4dp"
                android:layout_height="167dp"
                android:layout_marginTop="1dp"
                android:background="#ecbee5" />
        </com.tjut.mianliao.black.MagicLinearLayout>

        <com.tjut.mianliao.black.MagicLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical" >

            <com.tjut.mianliao.black.MagicRelativeLayout
                android:id="@+id/rl_notememo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_weight="1" >

                <com.tjut.mianliao.black.MagicLinearLayout
                    android:id="@+id/ll_note_title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:id="@+id/tv_notes_classmemo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp" />

                    <com.tjut.mianliao.theme.ThemeImageView
                        android:id="@+id/tv_new_memo"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/bottom_new"
                        android:visibility="gone" />

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:id="@+id/tv_memo_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="#7867BF"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </com.tjut.mianliao.black.MagicLinearLayout>

                <com.tjut.mianliao.mycollege.HorizontalScrollMemo
                    android:id="@+id/v_memo_content"
                    android:layout_width="wrap_content"
                    android:layout_height="131dp"
                    android:layout_below="@id/ll_note_title1"
                    android:layout_marginTop="11dp"
                    android:scrollbars="none" />
            </com.tjut.mianliao.black.MagicRelativeLayout>

            <com.tjut.mianliao.black.MagicRelativeLayout
                android:id="@+id/rl_notephoto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="17dp"
                android:layout_weight="1" >

                <com.tjut.mianliao.black.MagicLinearLayout
                    android:id="@+id/ll_note_title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:id="@+id/tv_notes_classphoto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp" />

                    <com.tjut.mianliao.theme.ThemeImageView
                        android:id="@+id/tv_new_notes"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/bottom_new"
                        android:visibility="gone" />

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:id="@+id/tv_note_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="#F16600"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </com.tjut.mianliao.black.MagicLinearLayout>

                <com.tjut.mianliao.mycollege.HorizontalScrollPhotonotes
                    android:id="@+id/v_notes_content"
                    android:layout_width="wrap_content"
                    android:layout_height="131dp"
                    android:layout_below="@id/ll_note_title2"
                    android:layout_marginTop="10dp"
                    android:scrollbars="none" />
            </com.tjut.mianliao.black.MagicRelativeLayout>

            <com.tjut.mianliao.black.MagicRelativeLayout
                android:id="@+id/rl_notehw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <com.tjut.mianliao.black.MagicLinearLayout
                    android:id="@+id/ll_note_title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:id="@+id/tv_notes_classhw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp" />

                    <com.tjut.mianliao.theme.ThemeImageView
                        android:id="@+id/tv_new_homework"
                        android:layout_width="35dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:src="@drawable/bottom_new"
                        android:visibility="gone" />

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:id="@+id/tv_homework_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:paddingBottom="5dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingTop="5dp"
                        android:textColor="#E471D2"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </com.tjut.mianliao.black.MagicLinearLayout>

                <com.tjut.mianliao.mycollege.HorizontalScrollHomework
                    android:id="@+id/v_homework_content"
                    android:layout_width="wrap_content"
                    android:layout_height="131dp"
                    android:layout_below="@id/ll_note_title3"
                    android:layout_marginTop="10dp"
                    android:scrollbars="none" />
            </com.tjut.mianliao.black.MagicRelativeLayout>
        </com.tjut.mianliao.black.MagicLinearLayout>
    </com.tjut.mianliao.black.MagicLinearLayout>
</com.tjut.mianliao.black.MagicLinearLayout>