<com.tjut.mianliao.black.MagicLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_recru"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.tjut.mianliao.theme.ThemeTextView
        android:id="@+id/tv_job_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/pic_bg_job_title"
        android:gravity="center_vertical|right"
        android:paddingRight="50dp"
        android:text="@string/mc_recru_job"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <com.tjut.mianliao.black.MagicLinearLayout
        android:id="@+id/ll_job_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pic_bg_job_white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:layout_marginBottom="2dp"
        android:paddingRight="10dp">

        <com.tjut.mianliao.black.MagicLinearLayout
            android:id="@+id/real_ll_job_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.tjut.mianliao.theme.ThemeTextView
                android:id="@+id/tv_mic_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#8C8C8C"
                android:textSize="12sp"/>

            <com.tjut.mianliao.theme.ThemeTextView
                android:id="@+id/tv_mic_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="#8C8C8C"
                android:textSize="12sp"/>
        </com.tjut.mianliao.black.MagicLinearLayout>

    </com.tjut.mianliao.black.MagicLinearLayout>

</com.tjut.mianliao.black.MagicLinearLayout>