<com.tjut.mianliao.black.MagicRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:background="@drawable/selector_bg_card" android:id="@+id/rl_points_card" android:layout_height="wrap_content" android:layout_width="match_parent" android:onClick="onClick" android:paddingBottom="12dp">

    <com.tjut.mianliao.theme.ThemeTextView style="@style/MianLiao.CardText" android:id="@+id/tv_my_points" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/card_margin_horizontal" android:layout_width="wrap_content" android:text="@string/points_mine" />

    <com.tjut.mianliao.theme.ThemeImageView android:id="@+id/iv_points" android:layout_below="@+id/tv_my_points" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_width="wrap_content" android:src="@drawable/ic_points" tools:ignore="ContentDescription" />

    <com.tjut.mianliao.theme.ThemeTextView android:gravity="center_vertical" android:id="@+id/tv_points_count" android:layout_alignTop="@+id/iv_points" android:layout_height="wrap_content" android:layout_marginLeft="12dp" android:layout_marginRight="12dp" android:layout_toLeftOf="@+id/iv_enter" android:layout_toRightOf="@+id/iv_points" android:layout_width="match_parent" android:maxLines="1" android:singleLine="true" android:textColor="@color/txt_headline" android:textSize="@dimen/title_text_size_small" />

    <com.tjut.mianliao.theme.ThemeTextView android:id="@+id/tv_get_points" android:layout_alignBottom="@+id/iv_points" android:layout_alignLeft="@+id/tv_points_count" android:layout_alignRight="@+id/tv_points_count" android:layout_height="wrap_content" android:layout_width="match_parent" android:maxLines="1" android:singleLine="true" android:text="@string/points_desc" android:textColor="#B1A367" android:textSize="14sp" />

    <com.tjut.mianliao.theme.ThemeImageView android:id="@+id/iv_enter" android:layout_alignParentRight="true" android:layout_alignTop="@+id/iv_points" android:layout_height="40dp" android:layout_marginRight="14dp" android:layout_width="wrap_content" android:scaleType="center" android:src="@drawable/ic_enter" tools:ignore="ContentDescription" />

</com.tjut.mianliao.black.MagicRelativeLayout>