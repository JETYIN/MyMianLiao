<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <com.tjut.mianliao.component.AvatarView android:id="@+id/iv_forum_icon" android:layout_centerVertical="true" android:layout_height="42dp" android:layout_marginLeft="15dp" android:layout_width="42dp" android:src="@drawable/ic_avatar_forum" tools:ignore="ContentDescription" />

    <com.tjut.mianliao.theme.ThemeImageView android:id="@+id/iv_forum_badge" android:layout_alignBottom="@+id/iv_forum_icon" android:layout_alignRight="@+id/iv_forum_icon" android:layout_height="13dp" android:layout_width="13dp" android:src="@drawable/ic_vip" android:visibility="gone" tools:ignore="ContentDescription" />

    <com.tjut.mianliao.black.MagicLinearLayout android:layout_centerVertical="true" android:layout_height="wrap_content" android:layout_toRightOf="@+id/iv_forum_icon" android:layout_width="match_parent" android:orientation="vertical" android:paddingLeft="14dp" android:paddingRight="8dp">

        <com.tjut.mianliao.black.MagicLinearLayout android:layout_height="wrap_content" android:layout_width="match_parent">

            <com.tjut.mianliao.theme.ThemeTextView android:id="@+id/tv_forum_name" android:layout_height="wrap_content" android:layout_width="wrap_content" android:maxLines="1" android:singleLine="true" android:textColor="#424242" android:textSize="15sp" />

            <com.tjut.mianliao.theme.ThemeImageView android:id="@+id/iv_prom" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginTop="2dp" android:layout_width="wrap_content" android:src="@drawable/icon_recommend" android:visibility="gone" tools:ignore="ContentDescription" />
        </com.tjut.mianliao.black.MagicLinearLayout>

        <com.tjut.mianliao.theme.ThemeTextView android:id="@+id/tv_today_posts" android:layout_height="wrap_content" android:layout_marginTop="2dp" android:layout_width="wrap_content" android:maxLines="1" android:singleLine="true" android:textColor="#979797" android:textSize="12sp" />
    </com.tjut.mianliao.black.MagicLinearLayout>

</merge>