<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv_course_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <com.tjut.mianliao.black.MagicLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:color_magic="0">

        <com.tjut.mianliao.black.MagicLinearLayout
            style="@style/MianLiao.SettingCategory"
            app:color_magic="0">

            <com.tjut.mianliao.component.DialogSetting
                android:id="@+id/setting_cur_semester"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.tjut.mianliao.component.DialogSetting
                android:id="@+id/setting_cur_week"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.tjut.mianliao.black.MagicLinearLayout>

        <com.tjut.mianliao.black.MagicLinearLayout
            style="@style/MianLiao.SettingCategory"
            app:color_magic="0">

            <com.tjut.mianliao.component.CheckBoxSetting
                android:id="@+id/setting_daily_course_alarm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.tjut.mianliao.component.DialogSetting
                android:id="@+id/setting_daily_course_alarm_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.tjut.mianliao.black.MagicLinearLayout>

        <com.tjut.mianliao.black.MagicLinearLayout
            style="@style/MianLiao.SettingCategory"
            android:visibility="gone"
            app:color_magic="0">

            <com.tjut.mianliao.component.IntentSetting
                android:id="@+id/setting_query_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.tjut.mianliao.black.MagicLinearLayout>

        <com.tjut.mianliao.black.MagicLinearLayout
            style="@style/MianLiao.SettingCategory"
            app:color_magic="0">

            <com.tjut.mianliao.component.IntentSetting
                android:id="@+id/setting_desktop_widget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.tjut.mianliao.black.MagicLinearLayout>

        <com.tjut.mianliao.black.MagicLinearLayout
            style="@style/MianLiao.SettingCategory"
            app:color_magic="0">

            <com.tjut.mianliao.component.IntentSetting
                android:id="@+id/setting_refresh_course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.tjut.mianliao.black.MagicLinearLayout>
    </com.tjut.mianliao.black.MagicLinearLayout>

</ScrollView>