<com.tjut.mianliao.black.MagicLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:color_magic="0">

    <com.tjut.mianliao.component.CommonBanner
        android:id="@+id/vs_switcher"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:banner_plate="10"/>

    <com.tjut.mianliao.black.MagicLinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal">

        <com.tjut.mianliao.black.MagicFrameLayout
            android:id="@+id/fl_location"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_bg_card_item"
            android:focusable="true"
            android:onClick="onClick">

            <com.tjut.mianliao.theme.ThemeTextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/ic_title_arrow"
                android:text="@string/job_work_location"/>
        </com.tjut.mianliao.black.MagicFrameLayout>

        <com.tjut.mianliao.theme.ThemeLineView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/hr_divider"/>

        <com.tjut.mianliao.black.MagicFrameLayout
            android:id="@+id/fl_work_category"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:onClick="onClick">

            <com.tjut.mianliao.theme.ThemeTextView
                android:id="@+id/tv_work_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/ic_title_arrow"
                android:text="@string/job_work_category"/>
        </com.tjut.mianliao.black.MagicFrameLayout>

        <com.tjut.mianliao.theme.ThemeLineView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/hr_divider"/>

        <com.tjut.mianliao.black.MagicFrameLayout
            android:id="@+id/fl_work_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:onClick="onClick">

            <com.tjut.mianliao.theme.ThemeTextView
                android:id="@+id/tv_work_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="6dp"
                android:drawableRight="@drawable/ic_title_arrow"
                android:text="@string/job_work_type"/>
        </com.tjut.mianliao.black.MagicFrameLayout>
    </com.tjut.mianliao.black.MagicLinearLayout>

    <com.tjut.mianliao.component.SearchView
        android:id="@+id/sv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"/>

</com.tjut.mianliao.black.MagicLinearLayout>