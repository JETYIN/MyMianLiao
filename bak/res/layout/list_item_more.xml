<com.tjut.mianliao.black.MagicRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" android:background="@drawable/selector_bg_item_more" android:layout_height="48dp" android:layout_width="match_parent">

    <com.tjut.mianliao.theme.ThemeImageView android:id="@+id/iv_icon" android:layout_centerVertical="true" android:layout_height="wrap_content" android:layout_marginLeft="20dp" android:layout_width="wrap_content" tools:ignore="ContentDescription" />

    <com.tjut.mianliao.theme.ThemeTextView android:id="@+id/tv_title" android:layout_centerVertical="true" android:layout_height="wrap_content" android:layout_marginLeft="14dp" android:layout_toRightOf="@+id/iv_icon" android:layout_width="wrap_content" android:textColor="#000000" android:textSize="15sp" />

    <com.tjut.mianliao.theme.ThemeImageView android:id="@+id/iv_badge" android:layout_alignTop="@+id/tv_title" android:layout_height="wrap_content" android:layout_toRightOf="@+id/tv_title" android:layout_width="wrap_content" android:src="@drawable/ic_navi_badge" tools:ignore="ContentDescription" />

    <com.tjut.mianliao.theme.ThemeImageView android:layout_alignParentRight="true" android:layout_centerVertical="true" android:layout_height="wrap_content" android:layout_marginRight="20dp" android:layout_width="wrap_content" android:src="@drawable/ic_enter" />

</com.tjut.mianliao.black.MagicRelativeLayout>