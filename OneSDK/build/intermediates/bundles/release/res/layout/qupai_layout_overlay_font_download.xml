<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="315dp"
      android:layout_height="250dp"
      android:layout_gravity="center"
      android:background="@drawable/dialog_qupai_radius_bg_white"
      android:orientation="vertical">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:textSize="17sp"
            android:gravity="center"
            android:text="@string/need_download_special_font"
            android:textColor="@android:color/black"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            >
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"
                android:scaleType="fitXY"
                android:id="@+id/banner"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|bottom"
                android:padding="10dp"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                android:id="@+id/font_item_name"/>
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/qupai_black_opacity_10pct"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/download_cancel"
                android:gravity="center"
                android:textSize="22sp"
                android:text="@string/qupai_download_cancel"
                android:textColor="@color/qupai_gray_0x92"/>
        <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/qupai_black_opacity_10pct"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:id="@+id/download_immediately"
                android:gravity="center"
                android:textSize="22sp"
                android:text="@string/qupai_download_immediately"
                android:textColor="@color/qupai_theme_default_background_color"/>
    </LinearLayout>



</LinearLayout>
