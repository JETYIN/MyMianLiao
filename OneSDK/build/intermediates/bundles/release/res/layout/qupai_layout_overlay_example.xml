<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="285dp"
      android:layout_height="195dp"
      android:layout_gravity="center"
      android:background="@drawable/dialog_qupai_radius_bg_white"
      android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="fitXY"
                android:id="@+id/image_left"/>

        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitXY"
                android:id="@+id/image_right"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
            android:background="@color/qupai_line_gray_cc"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:id="@+id/download_immediately"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/qupai_download_immediately"
            android:textColor="@color/qupai_theme_default_background_color"/>

</LinearLayout>
