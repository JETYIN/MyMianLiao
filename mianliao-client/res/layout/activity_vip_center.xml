<com.tjut.mianliao.black.MagicLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv_vip"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ScrollView
            android:id="@+id/sv_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="none">

            <com.tjut.mianliao.black.MagicLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.tjut.mianliao.component.CommonBanner
                    android:id="@+id/vs_switcher"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:src="@drawable/pic_forum_scene"
                    app:banner_plate="4"/>

                <com.tjut.mianliao.black.MagicRelativeLayout
                    android:id="@+id/rl_vip_open"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:clipChildren="true"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    app:color_magic="0">

                    <com.tjut.mianliao.component.ProAvatarView
                        android:id="@+id/iv_vip_avatar"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/pic_face_01"
                        app:borderType="roundCorner"
                        app:cornerRadius="100dp"/>

                    <com.tjut.mianliao.black.MagicLinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_vip_avatar"
                        android:orientation="vertical">

                        <com.tjut.mianliao.black.MagicLinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.tjut.mianliao.theme.ThemeTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/vip_of_minaliao"
                                android:textSize="15sp"/>

                            <com.tjut.mianliao.theme.ThemeImageView
                                android:id="@+id/iv_vip_icon"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:contentDescription="@null"
                                android:src="@drawable/bottom_icon_smallcrown_off"/>
                        </com.tjut.mianliao.black.MagicLinearLayout>

                        <com.tjut.mianliao.theme.ThemeTextView
                            android:id="@+id/tv_due_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/pay_light_vip_flag_des"
                            android:textColor="#8C8C8C"
                            android:textSize="9sp"/>
                    </com.tjut.mianliao.black.MagicLinearLayout>

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:id="@+id/tv_open_vip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/btn_orange_rectangle"
                        android:padding="2dp"
                        android:text="@string/pay_become_vip"
                        android:textColor="#7D4E03"
                        android:textSize="12sp"/>
                </com.tjut.mianliao.black.MagicRelativeLayout>

                <com.tjut.mianliao.theme.ThemeImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/img_solid_split_down"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="15dp"/>

                <com.tjut.mianliao.theme.ThemeTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/pay_vip_hot_function"
                    android:textSize="12sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:id="@+id/lv_vip_function"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"/>

                <com.tjut.mianliao.theme.ThemeImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/img_solid_split_down"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="15dp"/>

                <com.tjut.mianliao.black.MagicRelativeLayout
                    android:id="@+id/rl_vip_year"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:background="@color/white"
                    android:clipChildren="true"
                    android:onClick="onClick"
                    app:color_magic="0">

                    <com.tjut.mianliao.theme.ThemeImageView
                        android:id="@+id/iv_vip_icon_2"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:contentDescription="@null"
                        android:src="@drawable/bottom_icon_bigcrown_on"/>

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_vip_icon_2"
                        android:text="@string/pay_open_year_vip"
                        android:textSize="15sp"/>

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="15dp"
                        android:drawablePadding="5dp"
                        android:drawableRight="@drawable/ic_enter"
                        android:padding="2dp"
                        android:text="@string/pay_only_tel_months"
                        android:textColor="#CCCCCC"
                        android:textSize="9sp"/>
                </com.tjut.mianliao.black.MagicRelativeLayout>

                <com.tjut.mianliao.theme.ThemeImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/img_solid_split_down"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginTop="15dp"/>

                <LinearLayout
                    android:id="@+id/lv_intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:orientation="vertical"/>

                <com.tjut.mianliao.theme.ThemeImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/img_solid_split_down"/>
            </com.tjut.mianliao.black.MagicLinearLayout>
        </ScrollView>

        <com.tjut.mianliao.black.MagicLinearLayout
            android:id="@+id/ll_become_vip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/btn_orange_rectangle"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:onClick="onClick"
            android:orientation="horizontal">

            <com.tjut.mianliao.theme.ThemeImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="@null"
                android:src="@drawable/bottom_icon_bigcrown_on"/>

            <TextView
                android:id="@+id/tv_become_vip"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/pay_become_vip"
                android:textColor="@color/white"
                android:textSize="15sp"/>
        </com.tjut.mianliao.black.MagicLinearLayout>
</com.tjut.mianliao.black.MagicLinearLayout>
