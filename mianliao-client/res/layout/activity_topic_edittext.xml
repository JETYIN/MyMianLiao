<com.tjut.mianliao.black.MagicLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="30dp"
    android:background="@drawable/bg_topic_edittext"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    app:color_magic="0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:text="@string/topic_flag"
        android:textColor="#ffffff"
        android:textSize="14dp"
        android:textStyle="bold"
        tools:ignore="contentDescription" />

    <EditText
        android:id="@+id/et_topic_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="12dp"
        android:layout_weight="1"
        android:background="@null"
        android:focusableInTouchMode="true"
        android:hint="@string/input_topic"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLength="16"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColor="@drawable/bg_select_color"
        android:textSize="14sp" />
        <!--android:textColor="#66ffffff"-->

</com.tjut.mianliao.black.MagicLinearLayout>