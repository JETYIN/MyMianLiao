<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/team_avatar">

    <com.tjut.mianliao.component.AvatarView
        android:id="@+id/iv_avatar"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="37dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/team_bg_pic_noavatar"
        android:onClick="onClick"
        android:padding="5dp"
        android:scaleType="fitXY"
        app:borderType="circle"/>
    </LinearLayout>

    <com.tjut.mianliao.theme.ThemeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/tribe_upload_avatar_prompt"
        android:textColor="#807F7F"
        android:textSize="11sp"/>

    <com.tjut.mianliao.theme.ThemeTextView
        android:id="@+id/tv_upload_avatar"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_tv_blue"
        android:gravity="center"
        android:onClick="onClick"
        android:text="@string/tribe_upload_avatar"
        android:textColor="@color/white"
        android:textSize="16sp"/>

</LinearLayout>