<com.tjut.mianliao.black.MagicLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_post"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_bg_card_item"
    android:orientation="vertical">

    <com.tjut.mianliao.black.MagicLinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical">

        <com.tjut.mianliao.black.MagicFrameLayout
            android:id="@+id/fl_stick"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_btn_title">

            <com.tjut.mianliao.theme.ThemeTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btn_red_rectangle"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="@string/cf_stick_thread"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </com.tjut.mianliao.black.MagicFrameLayout>

        <com.tjut.mianliao.theme.ThemeTextView
            android:id="@+id/tv_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:background="@drawable/btn_red_rectangle"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:text="@string/fp_post_type_recommend"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <com.tjut.mianliao.theme.ThemeTextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:background="@drawable/btn_orange_rectangle"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <com.tjut.mianliao.theme.ThemeTextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/cf_title_icon_padding"
            android:maxLines="1"
            android:paddingRight="15dp"
            android:singleLine="true"
            android:textColor="#545454"
            android:textSize="15sp" />
    </com.tjut.mianliao.black.MagicLinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCCCCC" />

</com.tjut.mianliao.black.MagicLinearLayout>