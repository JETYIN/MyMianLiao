
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="@drawable/channel_search_bar"
    android:focusable="true"
    android:gravity="center"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <com.tjut.mianliao.theme.ThemeTextView
        android:id="@+id/tv_search_condition"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:background="@drawable/selector_btn_red"
        android:drawablePadding="3dp"
        android:drawableRight="@drawable/ic_search_condition_clear"
        android:gravity="center"
        android:paddingLeft="6dp"
        android:paddingRight="5dp"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:visibility="gone"
        tools:ignore="SmallSp"/>

    <com.tjut.mianliao.theme.ThemeImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_search"
        tools:ignore="contentDescription"/>

    <EditText
        android:id="@+id/et_search_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:background="@null"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textColor="#8e8e8e"
        android:textColorHint="#8e8e8e"
        android:textSize="15sp"/>

    <com.tjut.mianliao.theme.ThemeImageView
        android:id="@+id/iv_search_clear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/selector_search_clear"
        android:visibility="gone"
        tools:ignore="contentDescription"/>

</LinearLayout>