<com.tjut.mianliao.black.MagicLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/contact_item_height"
    android:background="@drawable/selector_bg_item"
    android:orientation="horizontal">

    <include
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        layout="@layout/list_item_user_info"
        android:background="@null"/>

    <com.tjut.mianliao.theme.ThemeImageView
        android:id="@+id/iv_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/card_margin_horizontal"
        android:background="@drawable/selector_btn_white_ring"
        android:padding="4dp"
        android:src="@drawable/ic_cf_more"
        tools:ignore="ContentDescription"/>

</com.tjut.mianliao.black.MagicLinearLayout>