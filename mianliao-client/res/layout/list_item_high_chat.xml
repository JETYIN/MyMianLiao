<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingTop="20dp">

    <FrameLayout
        android:id="@+id/left_layout"
        android:layout_width="0dp"
        android:layout_height="77dp"
        android:layout_marginLeft="-100dp"
        android:layout_marginRight="4dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_highchat_left"
            android:gravity="center_vertical|right"
            android:orientation="horizontal">

            <com.tjut.mianliao.theme.ThemeTextView
                android:id="@+id/tv_left_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"/>

            <com.tjut.mianliao.theme.ThemeTextView
                android:id="@+id/tv_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="70dp"
                android:singleLine="true"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_gravity="right|center_vertical"
            android:background="@drawable/highchat_avatar_bg">

            <com.tjut.mianliao.component.AvatarView
                android:id="@+id/iv_left"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/pic_loading"
                app:borderType="roundCorner"
                app:cornerRadius="100dp"/>
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/right_layout"
        android:layout_width="0dp"
        android:layout_height="77dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="-100dp"
        android:layout_weight="1"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_highchat_right"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.tjut.mianliao.theme.ThemeTextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="70dp"
                android:singleLine="true"/>

            <com.tjut.mianliao.theme.ThemeTextView
                android:id="@+id/tv_right_intro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="77dp"
            android:layout_height="77dp"
            android:layout_gravity="left|center_vertical"
            android:background="@drawable/highchat_avatar_bg">

            <com.tjut.mianliao.component.AvatarView
                android:id="@+id/iv_right"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:src="@drawable/pic_loading"
                app:borderType="roundCorner"
                app:cornerRadius="100dp"/>
        </FrameLayout>
    </FrameLayout>

</LinearLayout>