<com.tjut.mianliao.black.MagicFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_post_stream"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/square_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/activity_square_home"/>

    <LinearLayout
        android:id="@+id/bg_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.tjut.mianliao.component.ArcMenu
            android:id="@+id/id_arcmenu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            app:position="right_bottom"
            app:radius="100dp">

            <com.tjut.mianliao.theme.ThemeImageView
                android:id="@+id/id_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_arc_menu"/>

            <com.tjut.mianliao.theme.ThemeImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nomal_post_common"
                android:tag="normal"/>

            <com.tjut.mianliao.theme.ThemeImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nomal_post_video"
                android:tag="video"/>

            <com.tjut.mianliao.theme.ThemeImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/nomal_post_ballot"
                android:tag="vote"/>
        </com.tjut.mianliao.component.ArcMenu>
    </LinearLayout>

</com.tjut.mianliao.black.MagicFrameLayout>