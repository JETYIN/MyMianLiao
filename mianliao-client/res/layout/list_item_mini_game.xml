<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <com.tjut.mianliao.component.AvatarView
        android:id="@+id/iv_game_logo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/pic_cover_girl_mid"
        app:borderType="roundCorner"
        app:cornerRadius="5dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/iv_game_logo"
        android:orientation="vertical">

        <com.tjut.mianliao.theme.ThemeTextView
            android:id="@+id/tv_game_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/answer_all_time"
            android:textSize="17sp"/>

        <com.tjut.mianliao.theme.ThemeTextView
            android:id="@+id/tv_game_people_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/many_play"
            android:textColor="#9B9A9A"
            android:textSize="12sp"/>
    </LinearLayout>

    <com.tjut.mianliao.theme.ThemeTextView
        android:id="@+id/tv_play_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_tv_circle_blue"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:text="@string/access"
        android:textColor="#82BDEF"
        android:textSize="14sp"/>
    <com.tjut.mianliao.theme.ThemeLineView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="75dp"/>

</RelativeLayout>