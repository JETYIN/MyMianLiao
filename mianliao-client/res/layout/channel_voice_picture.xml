<com.tjut.mianliao.black.MagicFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="150dp"
    android:layout_gravity="center"
    android:layout_marginTop="5dp" >

    <com.tjut.mianliao.black.MagicLinearLayout
        android:id="@+id/ll_add_pic"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="5dp"
        android:background="@drawable/selector_group_operator"
        android:clickable="true"
        android:gravity="center"
        android:onClick="onClick"
        android:orientation="vertical" >

        <com.tjut.mianliao.theme.ThemeImageView
            android:id="@+id/iv_photo1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <com.tjut.mianliao.theme.ThemeTextView
            android:id="@+id/tv_vote1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/button_add"
            android:src="@drawable/button_add"
            android:text="@string/add_image"
            android:textColor="#34CED9" />
    </com.tjut.mianliao.black.MagicLinearLayout>

    <com.tjut.mianliao.black.MagicLinearLayout
        android:id="@+id/ll_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="onClick"
        android:orientation="vertical"
        android:visibility="gone" >

        <com.tjut.mianliao.component.ProImageView
            android:id="@+id/piv_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/pic_event_list_default" />

        <com.tjut.mianliao.theme.ThemeTextView
            android:id="@+id/tv_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="120dp"
            android:drawableLeft="@drawable/button_ic_voice"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:textColor="@color/white" />
    </com.tjut.mianliao.black.MagicLinearLayout>

</com.tjut.mianliao.black.MagicFrameLayout>