<com.tjut.mianliao.black.MagicLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_bg_char_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:color_magic="0">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.tjut.mianliao.black.MagicLinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.tjut.mianliao.component.ExpandableGridView
                android:id="@+id/gv_user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="4"
                android:paddingBottom="14dp"
                android:paddingLeft="8dp"
                android:paddingRight="7dp"
                android:paddingTop="11dp"
                android:verticalSpacing="5dp"/>

            <com.tjut.mianliao.black.MagicLinearLayout
                android:id="@+id/ll_group_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:orientation="vertical"
                app:color_magic="0">

                <com.tjut.mianliao.theme.ThemeLineView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#CACACA"/>

                <com.tjut.mianliao.black.MagicRelativeLayout
                    android:id="@+id/rl_group_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_group_chat_item_bg"
                    android:clickable="true"
                    android:onClick="onClick"
                    app:color_magic="0">

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="25dp"
                        android:text="@string/cht_group_name_txt"
                        android:textColor="#2E2E2E"
                        android:textSize="15sp"/>
					<com.tjut.mianliao.theme.ThemeImageView
                        android:id="@+id/iv_enter_groupname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="25dp"
                        android:gravity="center"
                        android:src="@drawable/botton_bg_chat_arrowright"
                        android:textColor="#9D9D9D"
                        android:textSize="15sp"
                        tools:ignore="ContentDescription"/>
                    <com.tjut.mianliao.theme.ThemeTextView
                        android:id="@+id/tv_group_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/iv_enter_groupname"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="14dp"
                        android:gravity="center"
                        android:maxWidth="200dp"
                        android:singleLine="true"
                        android:textColor="#9D9D9D"
                        android:textSize="15sp"/>
                </com.tjut.mianliao.black.MagicRelativeLayout>
				
                <com.tjut.mianliao.theme.ThemeLineView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#CACACA"/>

                <com.tjut.mianliao.black.MagicRelativeLayout
                    android:id="@+id/rl_group_chat_picture"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_group_chat_item_bg"
                    android:clickable="true"
                    android:onClick="onClick"
                    app:color_magic="0">

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="25dp"
                        android:text="@string/cht_group_chat_picture"
                        android:textColor="#2E2E2E"
                        android:textSize="15sp"/>

                    <com.tjut.mianliao.theme.ThemeImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="25dp"
                        android:gravity="center"
                        android:src="@drawable/botton_bg_chat_arrowright"
                        android:textColor="#9D9D9D"
                        android:textSize="15sp"
                        tools:ignore="ContentDescription"/>
                </com.tjut.mianliao.black.MagicRelativeLayout>

                <com.tjut.mianliao.theme.ThemeLineView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#CACACA"/>

                <com.tjut.mianliao.black.MagicRelativeLayout
                    android:id="@+id/rl_set_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/selector_group_chat_item_bg"
                    android:clickable="true"
                    android:onClick="onClick"
                    app:color_magic="0">

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="25dp"
                        android:text="@string/cht_group_my_nickname"
                        android:textColor="#2E2E2E"
                        android:textSize="15sp"/>

                    <com.tjut.mianliao.theme.ThemeImageView
                        android:id="@+id/iv_enter_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="25dp"
                        android:gravity="center"
                        android:src="@drawable/botton_bg_chat_arrowright"
                        android:textColor="#9D9D9D"
                        android:textSize="15sp"
                        tools:ignore="ContentDescription"/>

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:id="@+id/tv_my_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/iv_enter_nickname"
                        android:layout_marginRight="14dp"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:maxWidth="200dp"
                        android:singleLine="true"
                        android:textColor="#9D9D9D"
                        android:textSize="15sp"/>
                </com.tjut.mianliao.black.MagicRelativeLayout>

                <com.tjut.mianliao.theme.ThemeLineView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#CACACA"/>
            </com.tjut.mianliao.black.MagicLinearLayout>

            <com.tjut.mianliao.black.MagicLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#FFFFFF"
                android:orientation="vertical"
                app:color_magic="0">

                <com.tjut.mianliao.theme.ThemeLineView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#CACACA"/>

                <com.tjut.mianliao.black.MagicRelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_group_chat_item_bg"
                    app:color_magic="0">

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="25dp"
                        android:text="@string/cht_group_chat_top"
                        android:textColor="#2E2E2E"
                        android:textSize="15sp"/>

                    <com.tjut.mianliao.theme.ThemeImageView
                        android:id="@+id/iv_gc_top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="25dp"
                        android:gravity="center"
                        android:onClick="onClick"
                        android:src="@drawable/switch_off"
                        android:textColor="#9D9D9D"
                        android:textSize="15sp"
                        tools:ignore="ContentDescription"/>
                </com.tjut.mianliao.black.MagicRelativeLayout>

                <com.tjut.mianliao.theme.ThemeLineView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#CACACA"/>

                <com.tjut.mianliao.black.MagicRelativeLayout
                    android:id="@+id/rl_set_chatbackground"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_group_chat_item_bg"
                    android:clickable="true"
                    android:onClick="onClick"
                    app:color_magic="0">

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="25dp"
                        android:text="@string/cht_group_set_backgroud"
                        android:textColor="#2E2E2E"
                        android:textSize="15sp"/>

                    <com.tjut.mianliao.theme.ThemeImageView
                        android:id="@+id/iv_enter_chatbackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="25dp"
                        android:gravity="center"
                        android:src="@drawable/botton_bg_chat_arrowright"
                        android:textColor="#9D9D9D"
                        android:textSize="15sp"
                        tools:ignore="ContentDescription"/>

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:id="@+id/tv_my_chatbackground"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_toLeftOf="@id/iv_enter_chatbackground"
                        android:gravity="center"
                        android:maxWidth="200dp"
                        android:singleLine="true"
                        android:textColor="#9D9D9D"
                        android:textSize="15sp"/>
                </com.tjut.mianliao.black.MagicRelativeLayout>

                <com.tjut.mianliao.theme.ThemeLineView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#CACACA"/>
            </com.tjut.mianliao.black.MagicLinearLayout>

            <com.tjut.mianliao.black.MagicLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <com.tjut.mianliao.theme.ThemeLineView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#CACACA"/>

                <com.tjut.mianliao.black.MagicRelativeLayout
                    android:id="@+id/rl_group_delete_record"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/selector_group_chat_item_bg"
                    android:clickable="true"
                    android:onClick="onClick"
                    app:color_magic="0">

                    <com.tjut.mianliao.theme.ThemeTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="25dp"
                        android:text="@string/cht_group_delete_record"
                        android:textColor="#2E2E2E"
                        android:textSize="15sp"/>

                    <com.tjut.mianliao.theme.ThemeImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="25dp"
                        android:gravity="center"
                        android:src="@drawable/botton_bg_chat_arrowright"
                        android:textColor="#9D9D9D"
                        android:textSize="15sp"
                        tools:ignore="ContentDescription"/>
                </com.tjut.mianliao.black.MagicRelativeLayout>

                <com.tjut.mianliao.theme.ThemeLineView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#CACACA"/>
            </com.tjut.mianliao.black.MagicLinearLayout>

            <com.tjut.mianliao.black.MagicRelativeLayout
                android:id="@+id/rl_group_report"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/selector_group_chat_item_bg"
                android:clickable="true"
                android:onClick="onClick"
                app:color_magic="0">

                <com.tjut.mianliao.theme.ThemeLineView
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="#CACACA"/>

                <com.tjut.mianliao.theme.ThemeTextView
                    android:id="@+id/tv_report"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="25dp"
                    android:text="@string/cht_report_group"
                    android:textColor="#2E2E2E"
                    android:textSize="15sp"/>

                <com.tjut.mianliao.theme.ThemeImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="25dp"
                    android:gravity="center"
                    android:src="@drawable/botton_bg_chat_arrowright"
                    android:textColor="#9D9D9D"
                    android:textSize="15sp"
                    tools:ignore="ContentDescription"/>
            </com.tjut.mianliao.black.MagicRelativeLayout>

            <com.tjut.mianliao.theme.ThemeLineView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#CACACA"/>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/selector_quit_button_bg"
                android:gravity="center"
                android:onClick="onClick"
                android:text="@string/cht_group_del_quit"
                android:textColor="@color/white"
                android:textSize="16sp"/>
        </com.tjut.mianliao.black.MagicLinearLayout>
    </ScrollView>

</com.tjut.mianliao.black.MagicLinearLayout>